<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="botton_nav_style">
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="itemTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="fontFamily">@font/jaapokki_regular</item>
        <item name="android:layout_marginBottom">-5dp</item>
    </style>

</resources>