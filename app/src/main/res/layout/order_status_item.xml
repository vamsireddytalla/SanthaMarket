<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/dot_one"
                    android:background="@drawable/green_shape_status"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dot_one"
                    android:layout_centerInParent="true"
                    android:background="@color/greeen"/>
            </RelativeLayout>

        </LinearLayout>


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="0.75"
           android:gravity="center"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Ordered"
                   android:fontFamily="@font/roboto_medium"
                   android:textColor="@color/black"
                   app:layout_constraintEnd_toStartOf="@+id/textView8" />
               <TextView
                   android:id="@+id/textView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:text="Tue , 29 Des 20"
                   android:textColor="@color/light_cement"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Your Order has been Placed"
                   android:fontFamily="@font/roboto_regular"
                   app:layout_constraintEnd_toStartOf="@+id/textView8" />
           </LinearLayout>

       </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dot_two"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/view_two"
                    android:background="@color/greeen"/>
                <View
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/dot_two"
                    android:background="@drawable/green_shape_status"/>
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Packed"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/textView8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Tue , 29 Des 20 at 2:25 pm"
                    android:textColor="@color/light_cement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Order has been Packed"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintEnd_toStartOf="@+id/textView8" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dot_three"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/view_three"
                    android:background="@color/greeen"/>
                <View
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/dot_three"
                    android:background="@drawable/green_shape_status"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/textView8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Tue , 29 Des 20 at 2:25 pm"
                    android:textColor="@color/light_cement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Order has been Shipped"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/dot_four"
                    android:layout_centerInParent="true"
                    android:id="@+id/view_four"
                    android:background="@color/gray"/>
                <View
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    android:id="@+id/dot_four"
                    android:background="@drawable/gray_shape_status"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/textView8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Tue , 29 Des 20 at 2:25 pm"
                    android:textColor="@color/light_cement"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Order has been Delivered"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintEnd_toStartOf="@+id/textView8"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>